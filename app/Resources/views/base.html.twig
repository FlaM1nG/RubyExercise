<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head 
        content must come *after* these tags -->
        <title>WWW | {% block title %}{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('css/style.css') }}" rel="stylesheet" 
                  type="text/css">
        {% endblock %}
        
        <link rel="shortcut icon" href="{{ asset('favicon.png') }}" />
        
        {% block javascriptsHeader %}
            <script src="{{ asset('js/modernizr.js') }}" 
            type="text/javascript"></script>
        {% endblock %}

    </head>
    <body>
    {% block header %}
        {{ include('header/header.html.twig') }}
    {% endblock %}  
        
    {% block nav %}
        {{ include('nav/menuMobile.html.twig') }}
    {% endblock %}
    
        <div class="">
        {% block body %}
        {% endblock %}     

        {% block footer %}
            {{ include('footer/footer.html.twig') }}
        {% endblock %}   
        </div>

    {% block javascriptsFooter %}
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="{{ asset('js/jquery-3.1.1.min.js') }}" 
        type="text/javascript"></script>

        <!-- Latest compiled and minified JavaScript -->
        <script src="{{ asset('js/bootstrap.min.js') }}" 
        type="text/javascript"></script>

        <!-- MegaMenu js -->
        <script src="{{ asset('js/cbpHorizontalMenu.min.js') }}" 
        type="text/javascript"></script>
        <script>
            $(function() {
                cbpHorizontalMenu.init();
            });
        </script>

        <!-- Mobile Menu js -->
        <script src="{{ asset('js/menuMovil.js') }}" 
        type="text/javascript"></script> <!-- Resource jQuery -->
    {% endblock %}
    </body>
</html>