{% macro userComments(href, src, nombre, fecha, number) %}
<!-- IMAGEN USUARIO -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="us-perfil-list center-block">
            <a href="{{ href|default('#')|e }}">
                <img class="img-responsive"
                     src="{{ src|e|default(asset('img/userDefault.jpg')) }}"
                     alt="img-perfil-{{ nombre|e }}">
            </a>
        </div>
    </div>   
</div>
<!-- FIN IMAGEN USUARIO -->


<!-- NOMBRE USUARIO -->
<div class="row row-hre-user-name">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <a href="{{ href|default('#')|e }}" class="hre-user-name-grid">
            {{ nombre|e|default('User Name') }}
