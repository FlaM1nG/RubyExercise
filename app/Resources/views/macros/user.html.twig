{% macro userComments(href, src, nombre, fecha, number) %}
<!-- IMAGEN USUARIO -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <a href="{{ href|default('#')|e }}">
            <img class="center-block img-circle 
                img-responsive us-perfil-list" 
                src="{{ src|e|default(asset('img/userDefault.jpg')) }}" 
                alt="img-perfil-{{ nombre|e }}">
        </a>
            
        
    </div>   
</div>
<!-- FIN IMAGEN USUARIO -->


<!-- NOMBRE USUARIO -->
<div class="row row-hre-user-name">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <a href="{{ href|default('#')|e }}" class="hre-user-name-grid">
            {{ nombre|e|default('User Name') }}
        </a>
    
        
    </div>
</div>
<!-- FIN NOMBRE USUARIO -->


<!-- FECHA CREACION -->
<div class="row us-date-comments">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <span>{{ fecha|date('d/m/Y H:i') }}</span>        
    </div>
</div>
<!-- FIN FECHA CREACION  -->


<!-- NUMERO COMENTARIO -->
<div class="row us-number-comments">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <span>{{ number + 1 }}</span>      
    </div>
</div>
<!-- FIN FECHA CREACION  -->
{% endmacro %}


