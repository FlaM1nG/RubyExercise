            </div>
            <!-- FIN PUBLICIDAD -->
            
            
            <!-- OFERTAS DESTACADAS -->
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    {% block offerDestacadas %} {% endblock %}
                </div>
            </div>
            <!-- FIN OFERTAS DESTACADAS -->
            
            
            <!-- OTROS DATOS -->
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    {% block offerOtherData %} {% endblock %}
                </div>
            </div>
            <!-- FIN OTROS DATOS -->
            
            
        </div>
        <!-- FIN SECUNDARIO -->
        
        
    </div>
    
    
</div>
