{% block offerUser %} 
    <!-- IMAGEN USUARIO -->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-off-img">
            <a class="off-user-image" href="{{ path('user_public_profile',{username: trade.offer.userAdmin.username} ) }}">
                <img class=" img-circle img-responsive center-block"
                     src="{{asset(trade.offer.userAdmin.photo.url,'img') }}"
                     width="50" alt="">
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <a class="off-user-name" href="{{ path('user_public_profile',{username: trade.offer.userAdmin.username} ) }}" >
                {{trade.offer.userAdmin.username}}
