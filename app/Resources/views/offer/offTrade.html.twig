        <a class="off-user-image" href="#USUARIO">
            <img class=" img-circle img-responsive" 
                src="{{ asset(trade.offer.userAdmin.photo.url) }}" 
                width="50" alt="">
        </a>
                    
        <a class="off-user-name" href="#USUARIO">{{trade.offer.userAdmin.username}}</a>
        
    </div>
    <!-- FIN NOMBRE USUARIO -->
{% endblock %}


{% block offerTitle %}
