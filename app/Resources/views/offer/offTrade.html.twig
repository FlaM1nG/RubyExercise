{% endblock %}


{% block offerRelacionadas %} 
    {% for i in 0..2 %}
        {#{ include('services/lists/tradeList.html.twig') }#}
    {% endfor %}
{% endblock %}


{% block offerComments %}
    <h4>COMENTARIOS</h4>
    <hr>
    {{ form_start(formComment) }}
    <div class="off-form-comment">
        <div class="input-group">
            
            
                {{ form_widget(formComment.comment, { 'attr': { 'class': 'custom-control',
                                                      'rows': '3', 'style': 'resize:none' } }) }}

                <span class="input-group-btn">
                {{ form_widget(formComment.newComment, { 'attr': { 'class': 'btn btn-primary off-com-btn' } }) }}
                </span>
               
        </div>

    </div>
    {{ form_end(formComment) }}
    {% set i = 0 %}

    {% if trade.offer.comments is empty %}

        <div class="row separacion-inferior">
            <div class="col-lg-12">
                <h4>
                    Aún no hay comentarios
                </h4>
                <p>
                    ¡Se el primero en comentar!
                </p>
            </div>
        </div>

    {% else %}
        {% for comment in trade.offer.comments %}

            <div class="off-comment-target">
                <div class="row">
                    <div class="off-middle">
                        <div class="col-lg-2 col-md-4 col-sm-3 col-xs-4 off-middle-hijo off-col-comment">
                            {{ users.userComments( path('user_public_profile',{username: trade.offer.userAdmin.username} ),asset(comment.user.photo,'img'),comment.user.username,comment.createdDate,i) }}
                        </div>

                        <div class="col-lg-10 col-md-8 col-sm-9 col-xs-8  off-middle-hijo">
                            <p>{{ comment.comment }}</p>
                        </div>
                    </div>
                </div>


            </div>
            {% set i = i+1 %}
        {% endfor %}
    {% endif %}
    
{% endblock %}


