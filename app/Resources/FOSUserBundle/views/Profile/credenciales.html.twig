{# empty Twig template #}
<div id="credenciales" class="tab-pane">
    
    <h3>Seguridad</h3>
    
    <div id="containerUserName" class="form-group">
        <div class="col-sm-10">
            <label for="{{ form.username.vars.id }}">
                {{ form.username.vars.label }}
            </label>    
             
            {{ form_widget(form.username, {'attr': {'class': 'form-control','readonly': 'readonly'}}) }}
        </div>    
    </div>    
        
    <div class="form-group" id="containerEmail">
        <div class="col-sm-10">
            <label for="{{ form.email.vars.id }}">
                {{ form.email.vars.label }}
            </label>    
                
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>    
    </div>    
    
    <div id="containerPassword1" class="form-group">
        <div class="col-sm-10">
            <label for="{{ form.plainPassword.vars.id }}" >
                {{form.plainPassword.children.first.vars.label}}
            </label>    
            {{ form_widget(form.plainPassword.children.first, {'attr': {'class': 'form-control'}}) }}
        </div>    
    </div>    
        
    <div id="containerPassword2" class="form-group">
        <div class="col-sm-10">
            <label for="{{ form.plainPassword.vars.id }}" >
                {{form.plainPassword.children.second.vars.label}}
            </label>    
            {{ form_widget(form.plainPassword.children.second, {'attr': {'class': 'form-control'}}) }}
        </div>    
    </div>
    
</div>