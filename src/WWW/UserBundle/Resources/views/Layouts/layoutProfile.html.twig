{% block javascriptsFooter %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            console.log($('.content-wrapper').height());
            if($(window).width() > 768 && $('.cd-side-nav').height() <= $('.content-wrapper').height()){
                $('.cd-side-nav').css('height', '0');
                $('.cd-side-nav').css('height', $('.content-wrapper').height());
            }else{
                $('.cd-side-nav').css('height', 'inherit');
            }
        });
    
        $(window).resize(function(){
            console.log($('.content-wrapper').height());
            if($(window).width() > 768 && $('.cd-side-nav').height() <= $('.content-wrapper').height()){
                $('.cd-side-nav').css('height', '0');
                $('.cd-side-nav').css('height', $('.content-wrapper').height());
            }else{
                $('.cd-side-nav').css('height', 'inherit');
            }
            
            
        });
    </script>
    <script src="{{ asset('js/jquery.menu-aim.js') }}"></script>
    <script src="{{ asset('js/mainUserMenu.js') }}"></script> <!-- Resource jQuery -->

    
