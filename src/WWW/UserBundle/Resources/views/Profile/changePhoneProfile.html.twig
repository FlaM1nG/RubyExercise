{% extends 'UserBundle:Layouts:layoutProfile.html.twig' %}


{% block title %}
    Teléfono
{% endblock %}

{% block alertProfile %}

    {% for flash_message in app.session.flashbag.get('messageSuccess') %}
            {{ alerts.alert('alert-success', flash_message, null) }}
        {% endfor %} 

        {% for flash_message in app.session.flashbag.get('messageFail') %}
            {{ alerts.alert('alert-warning', flash_message, null) }}
    {% endfor %}

{#    {{ form_errors(form) }}#}
   
{% endblock %} 


{% block javascriptsHeader %}
    {{ parent() }}
{% endblock %}


{% block bodyProfile %}
    <div class="row us-dataPersonal-row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                Cambiar Teléfono
            </h3>
            <hr/>

            {{form_start(form)}}
            <div class="form-group">
                <div class="prefixPhone">
                    {{ form_label(form.prefix) }}
                    {{ form_widget(form.prefix) }}
                </div>

                <div class="phoneNumber">
                    <label class="control-label">&nbsp;</label>
                    {{ form_widget(form.phone) }}
                </div>

            </div>
            {{ form_widget(form.savePhone, {'attr':{'class': 'btn btn-default editAddressButton'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
    
{% endblock %}



{% block javascriptsFooter %}
    {{ parent() }}

{% endblock %}
    
