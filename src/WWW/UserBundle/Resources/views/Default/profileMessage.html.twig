{#    {{ form_start(formListMessages,{'attr':{'class': 'formMessage'} })}}#}
    <BR>Mensajes Enviados <br>
        {% for mensajes in listMessagesSend %}
            <div class="containerMessage_{{ mensajes.id }}">
            <a href="{{path('user_profiler_message' , {idMessage: mensajes.id} ) }}">
                De: {{ mensajes.from.username}}<br>
            </a>    
          
            Para: {{ mensajes.to.username }}<br>
            
            Asunto: {{ mensajes.subject}}<br>
            
            Mensaje: {{ mensajes.message}}
            
            <button class="bDeleteMessage" data-id="{{ mensajes.id }}" data-type="send"> Borrar </button>
            
            {# Para que funcione bien el borrado y después se muestren bien los 
               mensajes hay que hacerlo con formularios, lo suyo sería quitar 
