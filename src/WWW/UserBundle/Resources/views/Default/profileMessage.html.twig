            {{ form_widget(mensajes.to.username, { 'attr': {style:'display:none', 'readonly': 'false' } }) }}
            {{ form_widget(mensajes.subject, { 'attr': {style:'display:none', 'readonly': 'false' } }) }}
            {{ form_widget(mensajes.message, { 'attr': {style:'display:none', 'readonly': 'false'} }) }}
            
            {{ form_row(mensajes.id) }}
            {{ form_widget(mensajes.borrar) }}#}
            </div>
            
        {% endfor %}     

    <BR><br>Mensajes recibidos <br><br>
        {% for mensajes in listMessageReceived %}
            
       <div class="containerMessage_{{ mensajes.id}}">
           <a href="{{path('user_profiler_message' , {idMessage: mensajes.id} ) }}">
                De: {{ mensajes.from.username}}<br>
           </a>     
            Para: {{ mensajes.to.username }}<br>
            Asunto: {{ mensajes.subject }}<br>
            Mensaje: {{ mensajes.subject}}
            <button class="bDeleteMessage" data-id="{{ mensajes.id }}" data-type="received"> Borrar </button>
       </div>
        {% endfor %} 
        
        
       
