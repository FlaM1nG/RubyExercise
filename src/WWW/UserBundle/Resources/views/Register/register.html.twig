{# empty Twig template #}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Usuarios</title>
    {% block stylesheets %}
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.png') }}" />
    
    {% block javascripts %}
        <script type="text/javascript" src="../js/validacionUsuarios.js"></script>
    {% endblock %}
    
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
       
        {% block content %}
            {{ form_start(formulario, {'action':path('user_register',{'token':token}),'attr':{'onsubmit':'return validaRegistro()'}}) }}
            
                {{ form_rest(formulario) }}
                <div class="hobbies">
                    
                    {% set imageHobby = "" %}
                    {% set i = 0 %}
                   
                    {% for hobby in hobbies %}
                        
                        {% if hobby.photo is defined %}
                                {% set imageHobby = 'background:url("http://www.whatwantweb.com/'~hobby.photo.url~'")' %}
                        {% endif %}
                        
                        <input style="{{ imageHobby }}" type="checkbox" name="hobbies_{{i}}" value="{{hobby.id}}">
                        {{ hobby.name | capitalize}}
                        <br>
                        {% set i = i+1%}
                    {%endfor%}
                </div>
            {{ form_end(formulario) }}

        {% endblock %}     
        
  </body>
</html>